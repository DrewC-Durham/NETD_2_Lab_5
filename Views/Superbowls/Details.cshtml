@model Lab_5_Final.Models.Superbowl

@{
    ViewData["Title"] = "Details of Superbowl";
}

<h1>Details</h1>

<div>
    <h4>Superbowl @Html.DisplayFor(model => model.SuperBowlNum)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Year Played
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            Superbowl
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SuperBowlNum)
        </dd>
        <dt class = "col-sm-2">
            Champion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Team.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SuperbowlId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
