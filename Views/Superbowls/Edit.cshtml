@model Lab_5_Final.Models.Superbowl

@{
    ViewData["Title"] = "Edit Superbowl";
}

<h1>Edit</h1>

<h4>Superbowl @Html.DisplayFor(model => model.SuperBowlNum)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SuperbowlId" />
            <div class="form-group">
                <label asp-for="Year" class="control-label">Year Played</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuperBowlNum" class="control-label">Superbowl</label>
                <input asp-for="SuperBowlNum" class="form-control" />
                <span asp-validation-for="SuperBowlNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label">Champion</label>
                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
